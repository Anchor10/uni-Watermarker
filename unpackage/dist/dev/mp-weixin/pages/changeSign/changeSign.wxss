.change-sign .input-box {
  width: 686rpx;
  height: 206rpx;
  line-height: 60rpx;
  margin: 0 auto;
  background: #F4F4F4;
  border-radius: 8rpx;
  position: relative;
  padding: 30rpx 0;
}
.change-sign .input-box .input-text {
  display: block;
  height: 206rpx;
  line-height: 60rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  padding-right: 70rpx;
}
.change-sign .input-box .clear {
  display: block;
  width: 32rpx;
  height: 32rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 32rpx 32rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.change-sign .tips {
  width: 686rpx;
  margin: 20rpx auto 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}
.change-sign .tips text {
  font-size: 24rpx;
  color: #999999;
}
.change-sign .confirm {
  width: 686rpx;
  height: 88rpx;
  margin: 0 auto;
  color: #fff;
  background: #00C8FD;
  text-align: center;
  line-height: 88rpx;
  border-radius: 8rpx;
  margin-top: 60rpx;
}

