.login {
  padding: 0 32rpx;
}
.login .input-box {
  height: 64rpx;
  line-height: 64rpx;
  border-bottom: 1px solid #EEEEEE;
  margin-top: 45rpx;
}
.login .input-box .input-text {
  height: 64rpx;
  line-height: 64rpx;
  font-size: 32rpx;
}
.login .section-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  font-size: 28rpx;
  margin-top: 28rpx;
}
.login .section-box .remember {
  color: #343434;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.login .section-box .remember text {
  margin-left: 18rpx;
}
.login .section-box .remember .checkbox {
  display: block;
  width: 32rpx;
  height: 32rpx;
}
.login .section-box .remember .checkbox checkbox {
  background-image: none;
}
.login .section-box .remember .checkbox checkbox .wx-checkbox-input {
  display: block;
  width: 32rpx;
  height: 32rpx;
  background-image: url(data:image/png;base64,);
  background-position: center center;
  background-size: 32rpx 32rpx;
  background-color: #fff;
  border: 0;
}
.login .section-box .remember .checkbox checkbox .wx-checkbox-input-checked {
  display: block;
  width: 32rpx;
  height: 32rpx;
  background-image: url(data:image/png;base64,);
  background-position: center center;
  background-size: 32rpx 32rpx;
  background-color: #fff;
  border: 0;
}
.login .section-box .remember .checkbox checkbox .wx-checkbox-input-checked::before {
  display: none;
}
.login .section-box .forget {
  color: #00C8FD;
}
.login .btns {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  margin-top: 67rpx;
}
.login .btns .btn {
  width: 326rpx;
  height: 88rpx;
  border: 1px solid #00C8FD;
  font-size: 36rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 8rpx;
}
.login .btns .register-btn {
  color: #00C8FD;
}
.login .btns .login-btn {
  color: #fff;
  background: #00C8FD;
}

